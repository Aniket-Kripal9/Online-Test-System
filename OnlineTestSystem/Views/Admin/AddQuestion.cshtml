@model OnlineTestSystem.Models.Question

@{
    ViewData["Title"] = "Add Question";
}

<h2>Add Question</h2>
<form asp-action="AddQuestion" method="post">
    <div class="form-group">
        <label asp-for="QuestionText"></label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option1"></label>
        <input asp-for="Option1" class="form-control" />
        <span asp-validation-for="Option1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option2"></label>
        <input asp-for="Option2" class="form-control" />
        <span asp-validation-for="Option2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option3"></label>
        <input asp-for="Option3" class="form-control" />
        <span asp-validation-for="Option3" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Option4"></label>
        <input asp-for="Option4" class="form-control" />
        <span asp-validation-for="Option4" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CorrectOption"></label>
        <select asp-for="CorrectOption" class="form-control">
            <option value="1">Option 1</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
            <option value="4">Option 4</option>
        </select>
        <span asp-validation-for="CorrectOption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}